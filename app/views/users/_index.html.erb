<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <td class="following_count_<%= user.id %>"><%= render 'relationships/following_count', user: user %></td>
        <td class="follower_count_<%= user.id %>"><%= render 'relationships/follower_count', user: user %></td>
        <td class="follow_btn_<%= user.id %>"><%= render 'relationships/follow', user: user %></td>
        <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
